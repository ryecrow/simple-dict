<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="headlineFontAppearance">@style/headlineFontStyle</item>
        <item name="titleFontAppearance">@style/titleFontStyle</item>
        <item name="subheadFontAppearance">@style/subheadFontStyle</item>
        <item name="bodyFontRegularAppearance">@style/bodyFontRegularStyle</item>
        <item name="bodyFontBoldAppearance">@style/bodyFontBoldStyle</item>

        <item name="colorPrimary">#3f51b5</item>
        <item name="colorPrimaryDark">#303f9f</item>
        <item name="colorAccent">#009688</item>
        <!--<item name="colorAccent"></item>-->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorPrimaryInverse">#ffffff</item>

        <item name="toolbarStyle">@style/toolbar</item>
    </style>

    <style name="headlineFontStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="titleFontStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subheadFontStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyFontRegularStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="bodyFontBoldStyle" parent="bodyFontRegularStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dict_detail_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/pitch_padding</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">@dimen/pitch_padding</item>
        <item name="android:layout_marginBottom">@dimen/pitch_padding</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="dict_speaker">
        <item name="android:layout_width">@dimen/dict_header_pronounce_speaker_size</item>
        <item name="android:layout_height">@dimen/dict_header_pronounce_speaker_size</item>
        <item name="android:src">@drawable/speaker2</item>
        <item name="android:background">@drawable/speaker_background</item>
    </style>

    <style name="toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorSecondary">?android:textColorPrimaryInverse</item>
        <item name="titleTextAppearance">@style/toolbarTitleTextAppearance</item>
    </style>

    <style name="toolbarTitleTextAppearance" parent="subheadFontStyle">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <integer-array name="gplus_colors">
        <item>@color/gplus_color_1</item>
        <item>@color/gplus_color_2</item>
        <item>@color/gplus_color_3</item>
        <item>@color/gplus_color_4</item>
    </integer-array>

    <color name="gplus_color_1">#3e802f</color>
    <color name="gplus_color_2">#f4b400</color>
    <color name="gplus_color_3">#427fed</color>
    <color name="gplus_color_4">#b23424</color>

    <color name="holo_blue_dark">#0099cc</color>
    <color name="holo_yellow_dark">#ff8800</color>
    <color name="holo_green_dark">#669900</color>
    <color name="holo_purple_dark">#9933cc</color>
    <color name="holo_red_dark">#cc0000</color>
</resources>